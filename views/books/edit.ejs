<%- include('../header') -%>

<h1>Könyv szerkesztése</h1>
<% if(book.isNew) { %>
<form method="POST" action="/books/new" role="form" class="form-horizontal">
<% } else { %>
<form method="POST" action="/books/edit/<%= book.id %>" role="form" class="form-horizontal">
<% } %> 
	<div class="form-group">
		<label for="author" class="col-sm-2 control-label">Szerző</label>
		<div class="col-sm-10">
			<input type="text" name="author" value="<%= book.author %>" id="author" class="form-control" />
		</div> 
	</div>
	<div class="form-group">
		<label for="title" class="col-sm-2 control-label">Cím</label>
		<div class="col-sm-10">
			<input type="text" name="title" value="<%= book.title %>" id="title" class="form-control" />
		</div> 
	</div>
	<div class="form-group">
		<label for="isbn" class="col-sm-2 control-label">ISBN</label>
		<div class="col-sm-10">
			<input type="text" name="isbn" id="isbn" value="<%= book.isbn %>" class="form-control" />
		</div> 
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-success">Mentés</button>
		</div>
	</div>
</form>

<%- include('../footer') -%>