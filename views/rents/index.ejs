<%- include('../header') -%>

<div class="row">
	<div class="col-md-5">
		<h2>Kölcsönzés</h2>
		
		<form method="POST" action="/rents/rent">
			<div class="form-group">
				<label for="userId">Könyvtári tag azonosítója</label>
				<input type="text" name="userBarcode" class="form-control" id="userId">
			</div>
			<div class="form-group">
				<label for="bookItemBarcode1">Könyv vonalkódja</label>
				<input type="text" name="bookBarcode" class="form-control" id="bookItemBarcode1">
			</div>
			<button type="submit" class="btn btn-default">Kölcsönzés</button>
		</form>
	</div>
	<div class="col-md-5 col-md-offset-2">
		<h2>Könyv visszahozása</h2>
		
		<form method="POST" action="/rents/return">
			<div class="form-group">
				<label for="bookItemBarcode2">Könyv vonalkódja</label>
				<input type="text" name="bookBarcode" class="form-control" id="bookItemBarcode2">
			</div>
			<button type="submit" class="btn btn-default">Visszahoz</button>
		</form>
	</div>
</div>

<%- include('../footer') -%>